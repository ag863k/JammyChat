# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/jammychat

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# For production, uncomment and set:
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jammychat
# CORS_ORIGINS=https://your-frontend-domain.com,https://your-app.netlify.app